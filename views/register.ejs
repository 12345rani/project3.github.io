		<title>Awesome Responsive Website</title>
		<meta name="keywords" content="">
		<meta name="description" content="">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<!-- css file start -->
		<%-include ('link.ejs') %>
    	<!--css file end -->

        <!-- script file start -->
		<%-include ('script.ejs') %>
    	<!--script file end -->

      <script>

        function checkEmail(emailid)
        {
          
         var xhttp = new XMLHttpRequest()
         xhttp.open("GET","http://localhost:3002/checkEmail?emailid="+emailid,true)
         xhttp.send()
         
         xhttp.onreadystatechange=function(){
           if(xhttp.status==200 && xhttp.readyState==4)
           {
             var s=JSON.parse(xhttp.responseText)
            var ref=document.getElementById('response')
            
            if(s.matchstatus)
            {
              ref.innerHTML="EmailID already exists , please try with new"
              ref.style.color="red"
            }
            else
            {
              ref.innerHTML="EmailID available , proceed further"
              ref.style.color="green"
            }	 		
           }
         }
        }
        
        
        </script>
		
	</head>
	<body>

		<!-- start preloader -->
		<%-include ('loader.ejs') %>
    	<!-- end preloader -->

         <!-- start header -->
        <%-include ('header.ejs') %>
         <!-- end header -->

    	<!-- start navigation -->
		<%-include ('navigation.ejs') %>
		<!-- end navigation -->

    

    <div class="section-header text-left">
      <h1>Register Here!!!</h1>
      <font color="blue"><%= output %></font>
      <form method="post" action="/register">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" >
          </div>
          <div class="form-group">
              <label>Username</label>
              <input onkeyup="checkEmail(this.value)" type="email" class="form-control" name="email" >
              <span id="response"></span>
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" >
          </div>
          <div class="form-group">
              <label>Mobile</label>
              <input type="text" class="form-control" name="mobile" >
            </div>
          <div class="form-group">
              <label>Address</label>
              <textarea rows="5" class="form-control" name="address"></textarea>
          </div>
          <div class="form-group">
              <label>City</label>
              <select class="form-control" name="city">
              <option>Select city</option>
              <option>Indore</option>
              <option>Bhopal</option>
              <option>Ujjain</option>
              </select>
          </div>
          <div class="form-group">
              <label>Gender</label>
              Male <input type="radio"  name="gender" value="male">
               &nbsp;&nbsp;
              Female <input type="radio"  name="gender" value="female">
            </div>
          <button type="submit" class="btn btn-success">Submit</button>
        </form>     
  
  </div>
                              
  

    	<!-- start copyright -->
        <%-include ('copyright.ejs')%>
        <!-- end copyright -->

	</body>
</html>